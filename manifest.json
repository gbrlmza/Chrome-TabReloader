{
	"name": "Tab Reloader",
	"version": "0.1.2",
	"manifest_version": 2,

	"description": "Reload a Tab on a regular basis.",
	"icons": {
		"16": "icons/icon_16.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
	},

	"page_action": {
		"default_icon": {
			"19": "icons/icon_19.png",
			"38": "icons/icon_38.png"
		},
		"default_title": "Tab Reloader enabled"
	},

	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"storage",
		"tabs",
		"contextMenus"
	]
}
